10 REM *
20 REM * PROG 7.17 -  Snare Drum and Bass
30 REM *
40 SCREEN 0,0,0
50 FOR I = 0 TO 12
60 READ S
70 SOUND I,S
80 NEXT I
90 PRINT "Press 'n' to Sound Drum"
100 PRINT "Press'b' to Sound Bass"
110 A$ = INPUT$(1)
120 IF A$ = "b" THEN SOUND 7,&B00111000 : SOUND 13,1
130 IF A$ = "n" THEN SOUND 7,&B00000111 : SOUND 13,1
140 GOTO 110
150 DATA 140,7,140,7,140,7,15,255,16,16,16,190,7
