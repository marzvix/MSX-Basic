10 REM *
20 REM * PROG 9.2 - SPRITE ANIMATION
30 REM *
40 COLOR 15,4,4
50 SCREEN 2,0
60 FOR I=1 TO 8
70 READ A : S$=S$+CHR$(A)
80 NEXT
90 SPRITE$(0)=S$
100 INC = 1 : S = 20 : E = 235
110 FOR I = S TO E STEP INC
120 PUT SPRITE 0,(I,92),15,0
130 NEXT I
140 SWAP S,E : INC = -INC
150 GOTO 110
160 DATA &B00111000
170 DATA &B00010000
180 DATA &B10010010
190 DATA &B11101110
200 DATA &B10010010
210 DATA &B00010000
220 DATA &B00111000
230 DATA &B00000000
