10 REM *
20 REM * PROG 5.10 - Number Verifying
30 REM *
40 CLS
50 N$ = "" : P=0
60 PRINT "Number Please: ";
70 A$ = INPUT$(1)
80 IF A$= CHR$(13) THEN 180
90 IF A$= "+" AND N$="" THEN 150
100 IF A$="_" AND N$="" THEN 150
110 IF A$= "." THEN P=P+1
120 IF P= 1 THEN 150
130 IF A$>="0" AND A$<="9" THEN 150
140 BEEP : GOTO 70
150 N$=N$+A$
160 PRINT A$;
170 GOTO 70
180 PRINT : PRINT
190 PRINT "Number is: ";VAL(N$)
200 END
