10 REM *
20 REM * PROG 3.6 -  Point Rotation
30 REM *
40 DEF FNC(D)=D*3.141599#/180
50 DEF FNXC(X,Y,R)=X*COS(R)+Y*SIN(R)
60 DEF FNYC(X,Y,R)=-(X*SIN(R)-Y*COS(R))
70 SCREEN 0 : KEY OFF
80 INPUT"Coordinate Pair "; X, Y
90 INPUT "Rotate Angle ";A
100 PRINT
110 R=FNC(A)
120 NX=FNXC(X,Y,R)
130 NY=FNYC(X,Y,R)
140 PRINT "X =";NX
150 PRINT "Y =";NY
160 END
