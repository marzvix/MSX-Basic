10 REM *
20 REM * PROG 8.27 - Pie Charts
30 REM *
40 OPEN "GRP:" AS #1
50 COLOR 15,15,15
60 DIM A(12)
70 V=0
80 FOR I=1 TO 12
90 READ A(I)
100 V = V+A(1)
110 NEXT I
120 REM *
130 REM * Calculate Proportions
140 REM * and Plot Graph
150 REM *
160 SCREEN 2
170 UNIT = 6.283/V
180 LINE (0,0)-(255,191),1,B
190 LINE (4,4)-(80,187),1,BF
200 LINE (84,4)-(251,187),1,BF
210 LINE (86,6)-(249,185),15,B
220 CIRCLE (176,96),80,15,,,1.2
230 CIRCLE (176,96),80,15,-6.283,-6.283,1.2
240 SA = 0
250 FOR I=1 TO 12
260 SA=SA+(UNIT*A(I))
270 CIRCLE (176,96),80,15,-SA,-SA,1.2
280 NEXT
290 LINE (6,6)-(78,185),15,B
300 LINE (6,22)-STEP(72,0),15
310 DRAW "BM24,12":PRINT#1,"Data":PRINT#1,STRING$(3,13)
320 FOR I=1 TO 12
330 PRINT#1,USING " ###.";I;
340 PRINT#1, USING "####";A(I)
350 NEXT
360 GOTO 360
370 DATA 100,80,66,90,89,14
380 DATA 150,120,72,35,16,94
