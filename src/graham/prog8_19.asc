10 REM *
20 REM * PROG 8.19 - Input Routine
30 REM *
40 COLOR 15,15,15
50 SCREEN 2,0,0
60 OPEN "GRP:" AS #1
70 LINE (0,0)-STEP(255,191),1,B
80 PRESET (8,8)
90 COLOR 1
100 PRINT#1,"Radius :";
110 N$ = ""
120 X = 80
130 PRESET(X,8)
140 A$ = INPUT$(1)
150 IF A$ = CHR$ (13) THEN GOTO 250
160 REM *
170 REM * Validate Input
180 REM *
190 IF A$<"0" OR A$>"9" THEN PLAY "L24O2C" : GOTO 130
200 PRINT#1,A$; : N$ = N$+A$ : X = X+8
210 GOTO 130
220 REM *
230 REM * Draw Circle
240 REM *
250 R = VAL(N$)
260 IF R>80 THEN BEEP : GOTO 280
270 CIRCLE (128,100),R
280 LINE (80,8)-STEP(56,8),15,BF
290 GOTO 110
